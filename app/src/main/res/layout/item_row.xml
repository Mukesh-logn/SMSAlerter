<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_marginRight="7dp"
    android:layout_marginLeft="7dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    app:cardBackgroundColor="@color/colorWhite"
    android:minHeight="150dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:shrinkColumns="1"
        android:stretchColumns="1">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView1"
                style="@style/ticket_text_font_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INC" />

            <TextView
                android:id="@+id/inc"
                style="@style/ticket_text_font_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textSize="15sp" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView2"
                style="@style/ticket_text_font_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Severity" />

            <TextView
                android:id="@+id/severity"
                style="@style/ticket_text_font_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView dsfs sdfsdf sdfsdf sfsdf sfasdf asfa" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView3"
                style="@style/ticket_text_font_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Queue Name" />

            <TextView
                android:id="@+id/queue_name"
                style="@style/ticket_text_font_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView4"
                style="@style/ticket_text_font_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description" />

            <TextView
                android:id="@+id/desc"
                style="@style/ticket_text_font_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView5"
                style="@style/ticket_text_font_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Receive Time" />

            <TextView
                android:id="@+id/time1"
                style="@style/ticket_text_font_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />

        </TableRow>
        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/ticket_text_font_style"
                android:padding="5dp"
                android:text="Accepted At" />

            <TextView
                android:id="@+id/tim2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="TextView"
                style="@style/ticket_text_font_style"/>

        </TableRow>
        <TableRow
            android:id="@+id/tableRow7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Accepted By"
                style="@style/ticket_text_font_style"/>

            <TextView
                android:id="@+id/accepted_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Mukesh"
                style="@style/ticket_text_font_style"/>

        </TableRow>
    </TableLayout>

</android.support.v7.widget.CardView>